{
  "Display": "React Native Metarial UI",
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@rnmu/*": ["packages/*/src"],
      "@rneui/base/dist/*": ["./packages/base/src/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    // "emitDeclarationOnly": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "example",
    "packages/**/__tests__"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./packages/components" },
    { "path": "./packages/theme" }
  ]
}
