{
    "extends": "expo/tsconfig.base.json",
    "compilerOptions": {
      // Avoid expo-cli auto-generating a tsconfig
      "baseUrl": ".",
      // "paths": {
      //   "@rnmu/*": ["../packages/*/src"]
      // },
      "noEmit": true
    },
    "include": [
      "../packages/*/src",
      "./**/*.js",
      "./components"
    ],
    "exclude": ["node_modules", "*.config.js"],
    "references": [
      {"path": "../packages/theme/tsconfig.json"},
      {"path": "../packages/components/tsconfig.json"}
    ]
}