{
    "extends": "../tsconfig",
    "compilerOptions": {
      // Avoid expo-cli auto-generating a tsconfig
      "baseUrl": ".",
      "paths": {
        "@rnmu/*": ["../packages/*"]
      },
      "noEmit": true
    },
    "include": [
      "../packages/*",
    ],
    "exclude": ["node_modules", "*.config.js"],
    "references": [
      {"path": "../packages/theme"},
      {"path": "../packages/components"}
    ]
}