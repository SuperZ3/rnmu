{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      // Avoid expo-cli auto-generating a tsconfig
      "baseUrl": ".",
      "paths": {
        "@rnmu/*": ["../packages/*/src"]
      },
      "noEmit": true
    },
    "include": [
      "../packages/*/src",
      "./**/*.js"
    ],
    "exclude": ["node_modules", "*.config.js"],
    "references": [
      {"path": "../packages/theme"},
      {"path": "../packages/components"}
    ]
}