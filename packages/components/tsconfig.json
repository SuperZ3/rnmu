{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "allowJs": true /* Allow javascript files to be compiled. */,
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "rootDir": "components"
  },
  "include": ["components/**/*.tsx", "components/**/*.ts", "components/index.ts"],
  "exclude": [
    ".ci",
    "dist",
    "node_modules",
    "components/index.d.ts",
    "components/**/__tests__",
    "components/**/*.usage.tsx"
  ]
}
