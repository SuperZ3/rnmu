{
  "name": "rnmu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build-all": "pnpm -r run build",
    "build-components": "pnpm --filter @rnmu/components run build",
    "build-theme": "pnpm --filter @rnmu/theme run build",
    "test": "pnpm -r run test",
    "example:start": "pnpm --filter @rnmu/example start",
    "lint": "eslint ./packages --ext .js,.jsx,.ts,.tsx",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "typecheck": "tsc --noEmit --composite false",
    "clean-install": "pnpm -r run clean-install && rimraf node_modules && pnpm install"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.22.0",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@rnmu/components": "workspace:^",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.3.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-native": "^0.72.6",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chalk": "^5.3.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "extend-expect": "link:@testing-library/jest-native/extend-expect",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^14.0.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.0.1",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "0.72.4",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --single-quote --trailing-comma=es5 --write"
    ]
  }
}
